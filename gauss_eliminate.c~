#include <stdio.h>

void make_upper(int width,int height,double mat[width][height]){
  for(int k = 0;k < height-1;k++){
    for(int i = k+1;i < height,i++){
      double coeff = mat[i][k]/mat[k][k];
      for(int j = k;k < width;j++){
	mat[i][j] -= coeff*mat[k][k];
      }
    }
  }
  for(int i = 0;i < height;i++){
    for(int j = 0;j < width;j++){
      printf("%lf",mat[i][j]);
    }
  }
}
